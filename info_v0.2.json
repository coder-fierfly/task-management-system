/*Получение настроек подключения пользователя*/
GET 
/api/v1/settings/<userId>

Response:
{
	"name": "Ivan Petrov",
	"url": "https://hostedredmine.com",
	"apikey": "string",
	"projectsList": [
		{"projectName":"project1","projectId": "project1Id"},
		{"projectName":"project2","projectId": "project2Id"},
		{"projectName":"project3","projectId": "project3Id"},
		]
}

/*Получение настроек итераций проекта*/
GET 
/api/v1/projectIterations/<projectName>
{
	"projectName": "project1",
	"iterationsList": ["Iteration1","Iteration2","Iteration3"]
}

/*Получить настройки проверки*/
GET
/api/v1/robotSettings
{
    "show_error_response": true,
    "check_all_iterations": false,
    "need_lint": true,
    "assing_tasks_to_student": true
}

/*Задать настройки проверки*/
PUT
/api/v1/robotSettings
body:
{
    "show_error_response": true,
    "check_all_iterations": false,
    "need_lint": true,
    "assing_tasks_to_student": true
}

/*Начать проверку всех задач*/
POST
/api/v1/startFullCheck
{
    "projectId": "project1Id",
    "iteration": "iteration",
    "check_all_iterations": false,
    "show_error_response": true,
    "need_lint": true,
    "assing_tasks_to_student": true
}
/*Начать проверку одной задачи*/
POST
/api/v1/startCheckSingleIssue
{
    "taskId": "12345",
    "show_error_response": true,    
    "check_all_iterations": false,
    "need_lint": true,
    "assing_tasks_to_student": true
}


